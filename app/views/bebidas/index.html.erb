<p id="notice"><%= notice %></p>

<h1>Bebidas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Tamanio</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bebidas.each do |bebida| %>
      <tr>
        <td><%= bebida.nombre %></td>
        <td><%= bebida.tipo %></td>
        <td><%= bebida.tamanio %></td>
        <td><%= bebida.precio %></td>
        <td><%= link_to 'Show', bebida %></td>
        <td><%= link_to 'Edit', edit_bebida_path(bebida) %></td>
        <td><%= link_to 'Destroy', bebida, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

